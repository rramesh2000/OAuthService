@page
@model TokenService.Pages.AuthModel
@{
    ViewBag.Title = "OAuth Login";
}

<h2>@ViewBag.Title.</h2>
<div class="row">
    <div class="col-md-8">
        <section>
            <form method="post" role="form" class="form-horizontal">
                <div class="form-group">
                    <span class="col-md-2 control-label"> UserName </span>
                    <div class="col-md-10">
                        <input type="text" asp-for="user.UserName" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <span class="col-md-2 control-label"> Password </span>
                    <div class="col-md-10">
                        <input type="text" asp-for="user.password"  class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button  type="submit" class="btn btn-default">Log in</button>
                    </div>
                </div>                
            </form>
        </section>
        <div><label id="Message"></label></div>
    </div>
</div>
